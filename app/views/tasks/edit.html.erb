<h1 class="title">Update Task :</h1>
<%= form_for @task do |f| %>
  <div class="form-group">
    <%= f.label :title, "Title: ", class: "label" %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :details, "Details: ", class: "label"  %>
    <%= f.text_field :details, class: "form-control" %>
  </div>

  <div class="checkbox">
    <%= f.label :completed, "Completed: " %>
    <%= f.check_box :completed, class: "box" %>
  </div>

  <%= f.submit "Update", class: "btn btn-primary" %>
<% end %>

<div class="footer">
  <%= link_to tasks_path, class: "back" do %>
    <i class="fas fa-undo-alt"></i>
    Back to list
  <% end %>
</div>
